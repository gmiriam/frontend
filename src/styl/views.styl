.list-items
	margin-top 10px
	list-style-type none
	li
		margin 5px 0
		&.row
			display flex
			justify-content center

.drag-n-drop-container
	-webkit-touch-callout none
	-webkit-user-select none
	-moz-user-select none
	-ms-user-select none
	user-select none
	height 100px
	padding 10px
	border 3px dashed rgb(204, 204, 204)
	border-radius 20px
	margin-top 20px
	margin-bottom 30px
	display flex
	flex-flow column
	align-items center
	justify-content center
	h1
		margin 0
		padding 5px
		font-size 30px
		color #888
	.upload-button 
		width 200px
		display block
		outline none
		border-radius 10px
		background $green
		color $white
		text-transform uppercase
		font-weight bold
		font-size 16px
		text-align center
		&:hover 
			cursor pointer
			background $hover-green