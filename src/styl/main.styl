/* Master Styles */
h1
	color $ull-color
	font-family Arial, Helvetica, sans-serif
	font-size 250%

h2, h3
	color $light-black
	font-family Arial, Helvetica, sans-serif
	font-weight lighter

body
	height 100%
	width 100%

body, input[text], button
	color #888
	font-family Cambria, Georgia

a
	cursor pointer
	cursor hand

button
	font-family Arial
	border none
	padding 5px 10px
	border-radius 4px
	cursor pointer
	cursor hand

button:hover

button:disabled
	color #aaa
	cursor auto

.form-horizontal .form-group
	margin-right 0
	margin-left 0

*
	font-family Arial, Helvetica, sans-serif